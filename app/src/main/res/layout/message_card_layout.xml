<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <com.like.LikeButton
            app:icon_type="thumb"
            app:icon_size="25dp"
            android:id="@+id/dislikeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:like_drawable="@drawable/ic_thumb_down_white_24dp"
            app:unlike_drawable="@drawable/ic_thumb_down_grey_24dp"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimaryDark"
            app:circle_start_color="@color/colorAccent"
            app:circle_end_color="#FFFFFF"
            android:layout_weight="0.04"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.92">

            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/cfdialog_button_white_text_color"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/cfdialog_button_white_text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <com.like.LikeButton
            app:icon_type="thumb"
            app:icon_size="25dp"
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:like_drawable="@drawable/ic_thumb_up_white_24dp"
            app:unlike_drawable="@drawable/ic_thumb_up_grey_24dp"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimaryDark"
            app:circle_start_color="@color/colorAccent"
            app:circle_end_color="#FFFFFF"
            android:layout_weight="0.04"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
</android.support.v7.widget.CardView>